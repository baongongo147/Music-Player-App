  <property name="styleSheet">
   <string notr="true">
    /* GLOBAL SETTINGS */
    QWidget#PersonalView {
        background-color: #121212;
        color: #FFFFFF;
        font-family: &quot;Segoe UI&quot;, &quot;Arial&quot;, sans-serif;
    }

    /* --- 1. CARDS (THẺ THỐNG KÊ TRÊN CÙNG) --- */
    QFrame#cardToday, QFrame#cardMonth, QFrame#cardTotal {
        background-color: #181818;
        border-radius: 12px;
        border: 1px solid #282828;
    }
    /* Hiệu ứng hover cho thẻ */
    QFrame#cardToday:hover, QFrame#cardMonth:hover, QFrame#cardTotal:hover {
        background-color: #202020;
        border: 1px solid #333;
    }

    /* --- 2. TEXT LABELS --- */
    /* Tiêu đề chính (Recently Played, Top Songs...) */
    QLabel#lblTitleHistory, QLabel#lblTitleSongs, QLabel#lblTitleArtists {
        color: #FFFFFF;
        font-size: 22px; /* Đồng bộ kích thước với Header của Main (22px) */
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
    }
    
    /* Tiêu đề nhỏ trong thẻ (Listen Time...) */
    QLabel#lblHeaderToday, QLabel#lblHeaderMonth, QLabel#lblHeaderTotal {
        color: #B3B3B3;
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
    }
    
    /* Số liệu thống kê to (Màu xanh lá chủ đạo) */
    QLabel#lblStatToday, QLabel#lblStatMonth, QLabel#lblTotalSongs {
        color: #1DB954; 
        font-size: 36px;
        font-weight: 900;
    }
    
    /* Đơn vị (mins, tracks) */
    QLabel#lblUnitToday, QLabel#lblUnitMonth, QLabel#lblUnitTotal {
        color: #777;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    /* --- 3. TABLE WIDGET (RECENTLY PLAYED) --- */
    QTableWidget {
        background-color: #181818;
        border: none;
        border-radius: 8px;
        outline: none;
        gridline-color: transparent; /* Ẩn đường kẻ lưới */
    }
    
    /* Từng dòng trong bảng */
    QTableWidget::item {
        padding: 8px;
        color: #FFFFFF;
        border-bottom: 1px solid #222; /* Kẻ mờ giữa các dòng */
        font-size: 13px;
    }
    
    /* Hover dòng */
    QTableWidget::item:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }
    
    /* Selected dòng (ĐỒNG BỘ MAINWINDOW) */
    QTableWidget::item:selected {
        background-color: #1DB954;
        color: #FFFFFF; /* Chữ chuyển xanh */
        outline: none;
    }

    /* Header của bảng (Title, Artist, Time) */
    QHeaderView::section {
        background-color: #121212; /* Nền tối trùng màu nền App */
        color: #B3B3B3;            /* Chữ xám nhạt */
        padding: 5px;
        border: none;
        border-bottom: 2px solid #282828; /* Kẻ chân header */
        font-weight: 700;
        font-size: 12px;
        text-transform: uppercase;
    }
    
    /* Góc bảng */
    QTableCornerButton::section {
        background-color: #121212;
        border: none;
    }

    /* --- 4. LIST WIDGETS (TOP SONGS / ARTISTS) --- */
    QListWidget {
        background-color: #181818;
        border-radius: 8px;
        border: none;
        outline: none;
        padding: 5px;
    }
    
    QListWidget::item {
        padding: 8px;
        color: #FFFFFF;
        border-bottom: 1px solid #222;
        font-size: 13px;
        border-radius: 4px; /* Bo góc nhẹ cho item */
    }

    QListWidget::item:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }

    /* Selected Item (ĐỒNG BỘ MAINWINDOW) */
    QListWidget::item:selected {
        background-color: #1DB954;
        color: #FFFFFF;           /* Chữ xanh */
        font-weight: 700;
    }

    /* --- 5. SCROLLBARS (ĐỒNG BỘ) --- */
    QScrollBar:vertical {
        border: none;
        background: #121212;
        width: 8px;
        margin: 0px;
    }
    QScrollBar::handle:vertical {
        background: #444;
        min-height: 20px;
        border-radius: 4px;
    }
    QScrollBar::handle:vertical:hover {
        background: #555;
    }
    QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
        height: 0px;
    }
   </string>
